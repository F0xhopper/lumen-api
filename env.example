# Aquinas RAG API Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED: OpenAI Configuration
# =============================================================================

# OpenAI API Key (used for both LLM and embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# REQUIRED: Pinecone Configuration
# =============================================================================

# Pinecone API Configuration
PINECONE_API_KEY=your_pinecone_api_key_here

# Optional: Control which Pinecone index and namespace to use
# If the index does not exist, it will be created automatically.
PINECONE_INDEX_NAME=aquinas-works
# Leave empty to use the default namespace
PINECONE_NAMESPACE=

# =============================================================================
# OPTIONAL: Advanced Features
# =============================================================================

# LlamaCloud API Key for advanced PDF parsing (optional but recommended)
LLAMA_CLOUD_API_KEY=your_llama_cloud_api_key_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# FastAPI Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# EXAMPLE CONFIGURATION
# =============================================================================

# Complete example configuration:
# OPENAI_API_KEY=sk-...
# PINECONE_API_KEY=...
# LLAMA_CLOUD_API_KEY=...
# HOST=0.0.0.0
# PORT=8000
# DEBUG=true
# LOG_LEVEL=INFO